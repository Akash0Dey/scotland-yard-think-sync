{
  "imports": {
    "assert": "jsr:@std/assert@^1.0.12",
    "testing": "jsr:@std/testing/bdd",
    "hono": "npm:hono@^4.7.5"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "camelcase",
        "no-unused-vars",
        "no-debugger",
        "no-constant-condition",
        "no-empty-interface",
        "no-var",
        "ban-untagged-ignore"
      ],
      "exclude": []
    }
  },

  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true
  },
  "tasks": {
    "remove-coverage": {
      "description": "Removes coverage folder",
      "command": "rm -rf coverage"
    },
    "test": {
      "description": "Runs test with coverage",
      "command": "deno test -A --coverage",
      "dependencies": ["remove-coverage"]
    },
    "start": {
      "command": "deno run -A --watch main.ts",
      "description": "Runs the project"
    }
  }
}
